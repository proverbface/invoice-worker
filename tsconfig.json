{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "module": "commonjs",
    "outDir": "./dist",
    "allowJs": true,
    "target": "es2016",
    "lib": [
      "es7", "esnext", "dom",
    ]
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
}
